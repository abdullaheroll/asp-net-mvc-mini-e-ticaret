@model AbdullahErolEticaret.Models.HakkimizdaT
@{
    ViewBag.Title = "Hakkimizda";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="py-5">
    <div class="container mt-5">
        <div class="row">
            <div class="col-lg-12 text-center mb-5">
                <img src="@Model.GorselURL" alt="Görsel" class="img-fluid rounded" width="500" style="box-shadow: 0 3px 6px rgba(0,0,0,0.16), 0 3px 6px rgba(0,0,0,0.23);">
            </div>
            <div class="col-12 mb-3">
                <h2 class="text-center" style="text-shadow: 0 3px 6px rgba(0,0,0,0.16), 0 3px 6px rgba(0,0,0,0.23);">@Model.Baslik</h2>
                <hr />
            </div>

            <div class="col-12">
                <p class="text-center">@Model.Icerik</p>
            </div>


        </div>
    </div>
</section>

