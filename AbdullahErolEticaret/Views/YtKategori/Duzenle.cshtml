@model AbdullahErolEticaret.Models.KategorilerT
@{
    ViewBag.Title = "Duzenle";
    Layout = "~/Views/Shared/_PanelLayout.cshtml";
}

<div class="container-fluid ">

    <div class="py-5"></div>
    <!-- Content Row -->
    <div class="row">
        <div class="form-horizontal">
            <h4>@Model.Baslik Kategorisini Düzenle</h4>
            <hr />
            @Html.Raw(ViewBag.msg)

            <form action="/ytkategori/duzenle/@Model.KategoriID" method="post">
                <div class="form-group">
                    <label class="col-md-2 form-label">Ürün Adı</label>
                    <div class="col-md-10">
                        <input type="text" class="form-control" name="Baslik" value="@Model.Baslik" />
                    </div>
                </div>

                <div class="form-group">
                    <label class=" form-label col-md-2">Ürün Açıklaması</label>
                    <div class="col-md-10">
                        <input type="text" class="form-control" name="KategoriAciklamasi" value="@Model.KategoriAciklamasi" />
                    </div>
                </div>


                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10 pt-3">
                        <button type="submit" class="btn btn-success">Kaydet</button> |
                        <a href="/ytkategori" class="btn btn-light">Geri Dön</a>
                    </div>

                </div>
            </form>

        </div>

    </div>
</div>

