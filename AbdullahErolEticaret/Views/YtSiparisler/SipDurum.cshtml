@model AbdullahErolEticaret.Models.SiparislerT
@{
    ViewBag.Title = "SipDurum";
    Layout = "~/Views/Shared/_PanelLayout.cshtml";
}

<div class="container-fluid ">

    <div class="py-5"></div>
    <!-- Content Row -->
    <div class="row">
        <div class="form-horizontal">
            <h4>@Model.Isim Kişisine Ait Sipariş</h4>
            <hr />
            @Html.Raw(ViewBag.msg)
            
            <form action="/ytsiparisler/sipdurum/@Model.SiparisID" method="post">
                <input type="hidden" name="SiparisID" value="@Model.SiparisID" />
                <div class="form-group">
                    <label class="col-md-2 form-label">Sipariş Durumu:</label>
                    @if (Model.Durum == "1")
                    {
                        <p class="h6 text-info">Sipariş Alındı</p>
                        <hr style="width:500px" />
                    }

                    else if (Model.Durum == "2")
                    {
                        <p class="h6 text-primary">Sipariş Hazırlanıyor</p>
                        <hr style="width:500px" />
                    }
                    else if (Model.Durum == "3")
                    {
                        <p class="h6 text-warning">Kargoya Verildi</p>
                        <hr style="width:500px" />
                    }
                    else if (Model.Durum == "4")
                    {
                        <p class="h6 text-success">Teslim Edildi</p>
                        <hr style="width:500px" />
                    }
                    else
                    {
                        <p class="h6 text-danger">İptal Edildi</p>
                        <hr style="width:500px" />
                    }
                </div>
                <div class="form-group">
                    <label class="col-md-2 form-label">Sipariş Durumu Seç:</label>
                    <div class="col-md-4">

                        <select name="Durum" class="form-control">
                            <option value="1">
                                Sipariş Alındı
                            </option>
                            <option value="2">
                                Sipariş Hazırlanıyor
                            </option>
                            <option value="3">
                                Kargoya Verildi
                            </option>
                            <option value="4">
                                Teslim Edildi
                            </option>
                            <option value="5">
                                İptal Edildi
                            </option>
                        </select>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10 pt-3">
                        <button type="submit" class="btn btn-success">Kaydet</button> |
                        <a href="/ytsiparisler" class="btn btn-light">Geri Dön</a>
                    </div>

                </div>
            </form>

        </div>

    </div>
</div>

