@model AbdullahErolEticaret.Models.SiparislerT
@{
    ViewBag.Title = "Fatura";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid ">

    <div class="py-5"></div>
    <!-- Content Row -->
    <div class="row">
        <div class="form-horizontal">
            <h4 class="col-md-12">@Model.Isim Kişisine Ait Siparişin Faturasını Yükleme</h4>
            <hr />
            @Html.Raw(ViewBag.msg)

            <form action="/ytsiparisler/fatura/@Model.SiparisID" method="post" enctype="multipart/form-data">
                <input type="hidden" name="SiparisID" value="@Model.SiparisID" />
                <div class="form-group">
                    <label class="col-md-12 form-label h6">Fatura Yükle:</label>
                    <div class="col-md-12">
                        <input type="file" name="FaturaURL" class="form-control" accept=".pdf,.jpg,.jpeg,.png" />
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10 pt-3">
                        <button type="submit" class="btn btn-success">Kaydet</button> |
                        <a href="/ytsiparisler" class="btn btn-light">Geri Dön</a>
                    </div>

                </div>
            </form>

        </div>

    </div>
</div>
