@model IEnumerable<AbdullahErolEticaret.Models.HakkimizdaT>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_PanelLayout.cshtml";
}


<div class="container-fluid ">

    <div class="py-5"></div>
    <!-- Content Row -->
    <div class="row">
        <div class="form-horizontal">
            <h4>Hakkımızda</h4>
            <hr />
            <div class="card shadow mb-4">
                <div class="card-body">
                    <div class="card-body">
                        @foreach (var item in Model)
                        {
                            <center class="col-lg-12">
                                
                                <img src="@item.GorselURL" class="rounded pb-2 text-center" width="350" style="box-shadow: 0 3px 6px rgba(0,0,0,0.16), 0 3px 6px rgba(0,0,0,0.23);" />

                                <h4 class="card-title mt-3" style="text-shadow: 0 3px 6px rgba(0,0,0,0.16), 0 3px 6px rgba(0,0,0,0.23);">@item.Baslik</h4>
                                <hr />
 
                                <p class="card-subtitle pb-3">@item.Icerik</p>
                                <a href="/ythakkimizda/duzenle/@item.HakkimizdaID" class="btn btn-info">Düzenle</a>
                            </center>
                        }

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

